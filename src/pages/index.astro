---
import Presentable from "../components/Presentable.astro";
import "./base.css";
const textParts = [
  "Herzlichen Glückwunsch",
  "Zum 70. Geburtstag",
  "Liebe Mama",
  "❤",
  "🎁?",
  "Ich möchte dich",
  "nach Hamburg einladen",
  "mit Übernachtung 🛏️",
  "Essen 🥕",
  "und Theaterbesuch 🎭",
  "Dein Julius",
  "😘"
];
---

<html lang="en">
  <meta charset="UTF-8" />
  <link rel="icon" href="gift.svg" />
  <title>Mama ist 70</title>

  <body>
    <main
      class="flex h-screen bg-black w-full justify-center items-center text-justify text-red-500 text-9xl font-bold"
    >
      <div class="relative">
        {
          textParts.map((t, id) => (
            <Presentable
              id={id}
              nextId={textParts.length - 1 === id ? 0 : id + 1}
              border={false}
            >
              {t}
            </Presentable>
          ))
        }
      </div>
    </main>
  </body>
</html>
