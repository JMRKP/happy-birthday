---
const { border = true } = Astro.props;
---

<a
  href={`#${Astro.props.nextId}`}
  id={Astro.props.id}
  class:list={[
    { "active:border-0": !border },
    "absolute",
    { "border-8": border, "rounded-lg": border, "border-black": border },
    "p-10",
    "text-center",
    "-translate-x-1/2",
    "-translate-y-1/2",
    "z-0",
    "opacity-0",
    "target:transition",
    "ease-in-out",
    "duration-1000",
    "target:z-10",
    "target:glow",
    "target:opacity-100",
    "target:delay-1000",
  ]}><slot /></a
>
